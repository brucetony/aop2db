#########################
# Flake8 Configuration  #
#########################

[flake8]
ignore =
    W503 # line break before binary operator
    S403 # Pickle security
    S301 # Pickle security
    S405 # xml security
    S314 # xml security
	C901 # too complex methods

exclude =
    .tox,
    .git,
    __pycache__,
    docs/source/conf.py,
    build,
    dist,
    tests/fixtures/*,
    *.pyc,
    *.egg-info,
    .cache,
    .eggs
max-complexity = 20
max-line-length = 120
import-order-style = pycharm
